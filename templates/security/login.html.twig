{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="h-screen bg-gradient-to-r from-yellow-200 via-red-200 to-pink-300 flex  justify-center items-center">

        <form method="post">
            <div class="container bg-white flex flex-col justify-center rounded-lg shadow-xl py-12 px-8">
                <div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>
                <div>
                    <h1 class="text-xl font-bold text-center text-gray-800 py-6">Login</h1>
                </div>
                <div class="pb-4">
                    <label for="inputEmail" class="text-sm text-gray-700">Adresse email</label><br>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded bg-red-50 h-8 focus:bg-red-100"
                           required
                           autofocus>
                </div>
                <div >
                    <label for="inputPassword" class="text-sm text-gray-700">Mot de passe</label><br>
                    <input type="password" name="password" id="inputPassword" class="form-control rounded bg-red-50 h-8 focus:bg-red-100" required>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
                <div class="pb-4 text-right">
                    <a href="#" class=" text-xs text-gray-500 hover:underline">Mot de passe oubli√© ?</a>
                </div>
                <div class="text-center">
                    <button class="bg-red-100 px-4 py-3 rounded-xl text-gray-700 font-semibold hover:bg-red-200" type="submit">
                        Connexion
                    </button>
                </div>
                <div class="pt-8 pb-2 text-center">
                    <div>
                        <p class="text-gray-600 text-sm">ou</p>
                    </div>

                </div>
                <div class="text-center">
                    <a href="{{ path('app_register') }}" class="text-gray-800 hover:underline">S'inscrire</a>
                </div>
            </div>
        </form>
    </div>


{% endblock %}

