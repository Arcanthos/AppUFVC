{% extends 'base.html.twig' %}

{% block title %}
    Boutique
{% endblock %}

{% block body %}

    <div class="bg-white min-h-screen w-screen flex flex-col ">
        {% include 'components/shopNavBar.html.twig' %}
        {% include 'components/shopFilterBar.html.twig' %}
        <div class="flex flex-col flex-wrap px-4 pt-4">
            <div>
                <h4 class="font-semibold text-gray-900 pl-4">Animations </h4>
                <div class="flex flex-wrap">
                    {% for ressource in allRessources %}
                        <div class="productCard bg-white flex flex-col h-96 w-64 rounded-lg shadow-lg m-4 ring-1 ring-gray-100 hover:shadow-xl ">
                            <div class="cardImage h-48 bg-cover bg-center rounded-t-lg"
                                 style='background-image: url("{{ asset(shop_covers_path ~ ressource.coverPath) }}")'
                            >

                            </div>
                            <div class="flex flex-col flex-grow p-4">
                                <h4 class="font-semibold text-gray-700 ">{{ ressource.name }}</h4>
                                <div class="flex-grow ">
                                    <div class="flex flex-wrap content-center pt-2">
                                        {% for tag in ressource.tags %}
                                            <button class="tagBtn text-xs bg-gray-400 text-white p-1 mr-1 mb-1 rounded">{{ tag.name }}</button>
                                        {% endfor %}
                                    </div>


                                </div>
                                <div class="text-center">
                                    <a href="#"><button class="py-2 w-full bg-red-100 text-gray-700 rounded-3xl">{{ ressource.price }}
                                        <i class="fas fa-coins"></i></button></a>
                                </div>

                            </div>

                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/toggleSecondaryNavCLientShop.js') }}">
    </script>
{% endblock %}


