{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="h-screen bg-gradient-to-r from-yellow-200 via-red-200 to-pink-300 flex flex-col justify-center items-center">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}


        {{ form_start(registrationForm) }}
        <div class="container bg-white flex flex-col justify-center rounded-lg shadow-xl py-12 px-8">
            <div>
                <h1 class="text-xl font-bold text-center text-gray-800 py-6">S'inscrire</h1>
            </div>

            <div class="pb-4">
                {{ form_label(registrationForm.name, null, {'label': 'Nom', 'label_attr': {'class': 'text-sm text-gray-700'}}) }}<br>
                {{ form_widget(registrationForm.name, {'attr': {'class': 'rounded bg-red-50 h-8  focus:bg-red-100'}}) }}
            </div>
            <div class="pb-4">
                {{ form_label(registrationForm.firstname, null, {'label': 'Prénom', 'label_attr': {'class': '  text-sm text-gray-700'}}) }}<br>

                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'rounded bg-red-50 h-8  focus:bg-red-100'}}) }}
            </div>

            <div class="pb-4">
                {{ form_label(registrationForm.email, null, {'label': 'Adresse Email', 'label_attr': {'class': 'text-sm text-gray-700'}}) }}
                <br>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'rounded bg-red-50 h-8 focus:bg-red-100'}}) }}
            </div>
            <div class="pb-4">
                {{ form_label(registrationForm.plainPassword, null, {'label': 'Mot de passe', 'label_attr': {'class': 'text-sm text-gray-700'}} ) }}
                <br>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'rounded bg-red-50 h-8 focus:bg-red-100'}}) }}
            </div>
            <div class="pb-4">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label': "J'accepte les conditions générales d'utilisation", 'label_attr': {'class': 'text-xs text-gray-700'}} ) }}

            </div>
            <div class="text-center">
                <button class="bg-red-100 px-4 py-3 rounded-xl text-gray-700 font-semibold hover:bg-red-200"
                        type="submit">Je m'inscris
                </button>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
